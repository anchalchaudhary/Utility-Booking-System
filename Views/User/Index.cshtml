            <div style="margin-top: 20px;">
                <h1 style="font-family:'Roboto',sans-serif;color: #00C0C0;">Future Bookings</h1>
                <div style="height: 180px;overflow-y: scroll;" id="scrollstyle">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itemBooking in ViewBag.userBookings)
                            {
                                <tr>
                                    <th style="color:#fff" scope="row">@itemBooking.bookingNo</th>
                                    <td style="color:#fff">@itemBooking.title</td>
                                    @{int count = 0;}
                                    @foreach (var itemDate in ViewBag.userFutureBookedDate)
                                    {
                                        if (itemDate.bookingID == itemBooking.bookingID)
                                        {
                                            count++;
                                            <td style="color:#fff">@itemDate.dateChosen.ToShortDateString()</td>
                                        }
                                    }
                                    <td style="color:#fff">
                                        @Html.ActionLink("Application", "ViewApplication", "User", new { bookingID = itemBooking.bookingID, userID = itemBooking.userID }, new { target = "_blank" })
