@model UtilityBookingSystem.Models.Users
@{
    ViewBag.Title = "AccountSettings";
    Layout = null;
}
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/css?family=Montserrat|Nunito|Roboto|Open+Sans|Karla|Raleway" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Roboto|Open+Sans|Karla|Montserrat|PT+Sans+Narrow" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
<link href="~/css/customcss.css" rel="stylesheet" type="text/css" />

<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
<link rel="stylesheet" type="text/css" href="~/css/style.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<link href="~/css/my-style.css" rel="stylesheet" type="text/css" />

<nav id="navbaar" class="navbar navbar-expand-lg navbar-dark sticky-top">
    <a href="http://www.akgec.in"><img src="~/images/akgeclogo.png" height="50px" class="d-inline-block align-top" alt=""></a>
    <a class="navbar-brand" href="@Url.Action("Index","User")">
        <div style="vertical-align: middle;font-family: 'Karla',sans-serif; font-size: 1.5em" class="d-inline-block">
            Hall Management system
        </div>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <b class="navbar-toggler-icon"></b>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul style="font-family:'Roboto', sans-serif; font-size: 1.2em" class="navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Home", "Index", "User", new { @class = "nav-link" })
            </li>
            <li class="nav-item active">
                @Html.ActionLink("Account Settings", "AccountSettings", "User", new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Logout", "Logout", "User", new { @class = "nav-link" })
            </li>
        </ul>
    </div>
</nav>
<div class="container">
    <div class="col l4 sm12 m12" id="login-page">
        @using (Html.BeginForm("AccountSettings", "User", FormMethod.Post, new { @class = "login-form", @style = "margin-left: 10px;" }))
            {
            <div class="row">
                <div class="input-field col s12 center">
                    <!-- <img src="images/login-logo.png" alt="" class="circle responsive-img valign profile-image-login"/> -->
                    <p class="center login-form-text"><h4>Change Password</h4></p>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <!-- <i class="mdi-social-person-outline prefix"></i> -->
                    <i class="material-icons prefix">vpn_key</i>
                    @Html.PasswordFor(model => model.password, new { @id = "password", @style = "background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;); cursor: auto;" })
                    <label for="password" data-error="wrong" class="center-align" data-success="">Password</label>
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "error" })
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <!-- <i class="mdi-action-lock-outline prefix"></i> -->
                    <i class="material-icons prefix">vpn_key</i>
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @id = "cpassword", @style = "background-image: url(&quot;data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGP6zwAAAgcBApocMXEAAAAASUVORK5CYII=&quot;" })
                    <label for="cpassword">Re-Password</label>
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "error" })
                </div>
            </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn waves-effect waves-light col s12">Save Changes</button>
                    </div>
                </div>
        }
    </div>
</div>
<div style="color: white; position:fixed;width:300px;bottom:0px;right:25%;left:54%;margin-left:-150px;">
    Powered By
    <img style="width: 50px;" src="~/images/silogo.png">
    Software Incubator
</div>
@Html.Raw(TempData["ChangedPassword"])
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
<script type="text/javascript" src="~/js/script.js"></script>
