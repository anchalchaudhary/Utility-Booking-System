<div class="container-fluid">
    @if (Session["ChangePasswordUserID"] != null)
    {
        <div class="top">
            <img src="~/images/akgeclogo.png"> <span>AJAY KUMAR GARG ENGINEERING COLLEGE GHAZIABAD</span>
